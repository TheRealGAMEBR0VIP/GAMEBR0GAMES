PanelWidgetClass UIActionSlider {
 size 1 30
 halign left_ref
 valign top_ref
 hexactpos 0
 vexactpos 0
 hexactsize 0
 vexactsize 1
 color 0 0 0 0
 style rover_sim_colorable
 scriptclass "UIActionSlider"
 {
  FrameWidgetClass action_wrapper {
   ignorepointer 1
   position 0 0
   size 1 1
   hexactpos 0
   vexactpos 0
   hexactsize 0
   vexactsize 0
   {
    TextWidgetClass action_label {
     size 1 20
     valign center_ref
     vexactsize 1
     text "{LABEL}"
     font "gui/fonts/sdf_MetronLight24"
     "text offset" 10 0
     "bold text" 1
     "exact text" 1
     "exact text size" 16
     "text valign" center
    }
    SliderWidgetClass action {
     size 0.7 20
     halign right_ref
     valign center_ref
     vexactsize 1
     "fill in" 1
     "listen to input" 1
     style Editor
     step 0.01
     {
      TextWidgetClass action_value {
       ignorepointer 1
       size 1 1
       halign center_ref
       valign center_ref
       hexactpos 1
       vexactpos 1
       hexactsize 0
       vexactsize 0
       text ""
       font "gui/fonts/sdf_MetronLight24"
       "exact text" 1
       "exact text size" 16
       "text halign" center
       "text valign" center
      }
     }
    }
   }
  }
  PanelWidgetClass action_wrapper_disable {
   visible 0
   clipchildren 0
   ignorepointer 0
   color 0.1569 0.1569 0.1569 0.902
   position 0 0
   size 1 1
   style rover_sim_colorable
  }
 }
}