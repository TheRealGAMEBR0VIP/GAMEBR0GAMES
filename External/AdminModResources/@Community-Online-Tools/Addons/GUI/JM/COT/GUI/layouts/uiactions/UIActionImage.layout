PanelWidgetClass UIActionImage {
 color 0 0 0 0
 size 1 30
 halign left_ref
 valign top_ref
 hexactpos 0
 vexactpos 0
 hexactsize 0
 vexactsize 1
 scriptclass "UIActionImage"
 style rover_sim_colorable
 {
  FrameWidgetClass action_wrapper {
   ignorepointer 1
   position 0 0
   size 1 1
   hexactpos 0
   vexactpos 0
   hexactsize 0
   vexactsize 0
   {
    ImageWidgetClass action_label {
     size 1 1
     halign right_ref
     valign center_ref
     hexactsize 1
     vexactsize 1
     mode blend
     "src alpha" 1
     "no wrap" 1
     stretch 0
    }
   }
  }
  PanelWidgetClass action_wrapper_disable {
   visible 0
   clipchildren 0
   ignorepointer 0
   color 0.06 0.08 0.11 0.996
   position 0 0
   size 1.1 1.1
   halign center_ref
   valign center_ref
   style rover_sim_colorable
  }
 }
}